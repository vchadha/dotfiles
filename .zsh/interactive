# Source shell interactive
source $HOME/.shell/interactive

#
# Aliases
#

alias ll='ls -alt'
alias ....='cd ../..'

#
# Functions
#

# Print a pruned version of a tree.
#
# Examples:
#
#   # Print all "*.js" files in src:
#   subtree '*.js' src
#
#   # Print all "*.js" files in the current directory:
#   subtree '*.js'
#
#   # Print all "*.js" and "*.ts" files in current directory:
#   subtree '*.js|*.ts'
#
function subtree() {
    tree -a --prune -P "$@"
}
